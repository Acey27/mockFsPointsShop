{
  "name": "points-shop-server",
  "version": "1.0.0",
  "description": "Backend server for Points Shop application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate:pg",
